<!--components/z-swiper/z-swiper.wxml-->
<swiper class="swiper" 
        circular 
        indicator-dots
        indicator-active-color="#ff5777"
        autoplay
        interval="3000"
        duration="300">
  <block  wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image || item}}" mode="widthFix" class="image"/>
    </swiper-item>
  </block>
</swiper>
